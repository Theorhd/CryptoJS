{
  "name": "cryptojs-secure",
  "version": "0.1.0",
  "description": "Package de cryptographie asymétrique pour chiffrer/déchiffrer des messages et documents avec des clés publiques/privées",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --config jest.config.cjs",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "publish": "npm run clean && npm run build && npm publish --access public"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Theorhd/CryptoJS.git"
  },
  "bugs": {
    "url": "https://github.com/Theorhd/CryptoJS/issues"
  },
  "homepage": "https://github.com/Theorhd/CryptoJS#readme",
  "keywords": [
    "crypto",
    "encryption",
    "decryption",
    "rsa",
    "public-key",
    "private-key"
  ],
  "author": "Theorhd",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.4",
    "typescript": "^4.9.5"
  }
}
